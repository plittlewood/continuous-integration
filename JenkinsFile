pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat '''cd %WORKSPACE%
				dotnet restore
				dotnet test ci-demo-api-tests/ci-demo-api-tests.csproj --logger "trx;LogFileName=unit_tests.xml"
				exit 0'''
				slackSend color: '#439FE0', message: 'Starting build ${env.BUILD_NUMBER} on branch {env.BRANCH_NAME}'
            }
        }
    }
}